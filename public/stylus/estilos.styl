@import "normalize.styl"

/*Utilidades*/
.bottom
    margin-bottom: 1em
    position: relative

.u-title
    border-bottom: 2px dashed #BF00FF
    color: #53555c
    font-weight: 400
    padding-bottom: .5em
    text-align: center

.u-containerDefault
    width: 50em
    margin: 0 auto

/* Componentes */

/* MainMenu */
.MainMenu
    background: #1E1E1E
    height: 3.75em
    left:0
    opacity: 0.9
    position: fixed
    right: 0
    text-align: center
    top:0

.MainMenu-list
    margin:0
    padding: 0

.MainMenu-item
    display: inline-block

.MainMenu-link
    color: #CC66CC
    font-size: 1.25em
    line-height: 60px
    margin: 0 1.25em
    text-decoration: none

/* Header */
.Header
    background-image: url('../img/portada.jpg')
    background-position: center
    background-repeat: no-repeat
    background-size: cover
    margin-top: 3.75em
    padding: 1em 0
    text-align: center
    width 100%

.Header-image
    border:5px solid white
    border-radius: 50%
    width: 250px
    height: 250px

.Header-link,
.Header-name
    color: white

.Header-link
    font-weight: bold
    font-size: 2.2em

.Header-name
    font-size: 1.5em
    font-weight: 300
    margin:0

/* Profile */
.Profile
    text-align: center
    width 100%

.Profile-link
    background-color: orange
    border-radius: 1.5em
    color: white
    padding: .5em 1em
    text-decoration: none
    margin-right: .5em
    display: inline-block

.Profile-description
    margin-bottom: 1em
   
.Profile-title
	width 100%

/* Work */
.Work
    text-align: center
    width 100%
   
.Work-item
    // display: inline-block
    // text-align: left
    position relative

.Work-imageContainer
    margin: 0 2em 1em 0

.Work-description
    color: #515151
    font-size: 1.1em
    font-style: italic

/* Footer */
.Footer
    background: #1E1E1E
    background-position: center
    background-size: cover
    text-align: center
    padding: 2em 0
    width 100%

.Footer-description
    color: white
    font-weight: normal

.Footer-left
    width: auto
    display: inline-block
    vertical-align: top

.Footer-title
    color: white
    font-weight: normal

.purpura
    color: #00CCCC
    
@media screen and (max-width: 767px)
	.Header
		width: 100%
	.contacto
		display none
	
	.u-containerDefault
    	width: 20em   	